
<%- include('../partials/head') -%>

<%- include('../partials/nav') -%>

    <div class="container">
        <h2 class="container_headers">CREATE NEW COMIC</h2>
        <form class="create_update_form" action='/books/' method= 'POST'>
            
            <div>
                <label for="image">Image:</label>
                <input type="text" id="image" name="image" value="image value stored in database">
            </div>
            <div>
                <label for="title">Title:</label>
                <input type="text" id="title" name="title" placeholder="Title" minLength="2" required />
            </div>
            <div>
                <label for="author">Author:</label>
                <input type="text" id="author" name="author" placeholder="Author" minLength="2" required />
            </div>
            <div>
                <label for="publisher">Publisher:</label>
                <select id="publisher" name="publisher" required>
                    <option value="select" selected disabled>Select</option>
                    <option value="boom!box">BOOM! Box</option>
                    <option value="dc_comics">DC Comics</option>
                    <option value="harry_n_abrams">Harry N. Abrams</option>
                    <option value="icon_books">Icon Books</option>
                    <option value="image_comics">Image Comics</option>
                    <option value="marvel">Marvel</option>
                    <option value="simon_schuster">Simon &amp; Schuster</option>
                    <option value="top_shelf_productions">Top Shelf Productions</option>
                    <option value="viz_media_llc">VIZ Media LLC</option>
                </select>
            </div>
            <div>
                <label for="genre">Genre:</label>
                <input type="text" id="genre" name="genre" placeholder="Genre" required />
            </div>
            <div>
                <label for="numpages">Number of Pages:</label>
                <input type="number" id="numpages" name="numpages" placeholder="Number of Pages">
            </div>
            <div>
                <label for="rating">Rating:</label>
                <input type="number" id="rating" name="rating" min="1" max="5" required>
            </div>
            <div>
                <label for="synopsis">Synopsis:</label>
                <textarea id=synopsis name="synopsis" placeholder=Synopsis>Synopsis</textarea>
            </div>

            <input type="submit" value="Submit"><br>

        </form>
    </div>

    <%- include('../partials/footer') -%>
